<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="336dp"
    android:layout_height="426dp"
    android:gravity="center"
    android:background="@mipmap/img_card_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <cn.bgs.myapplication.RoundImageView
            android:id="@+id/mIv"
            android:background="@mipmap/img_avatar_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/buxihuan"
            android:alpha="0"
            android:background="@mipmap/img_like"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <ImageView
            android:alpha="0"
            android:id="@+id/xihuan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/img_dislike"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="14dp"
        android:paddingTop="15dp"
        >
        <TextView
            android:id="@+id/momo"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摸摸哒"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/momo"
            android:id="@+id/age"
            android:text="♀ 23"
            android:textSize="20sp"
            android:background="@drawable/shape_age"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="射手座"
            android:textSize="20sp"
            android:layout_toRightOf="@id/age"
            android:layout_below="@id/momo"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
</LinearLayout>